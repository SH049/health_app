<%= form_with(model: diary) do |form| %>
  <% if diary.errors.any? %>
    <div id="error_explanation">
      <h2>エラーが発生しました</h2>
      <ul>
        <% diary.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <span class="red">*</span>
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.date_select :start_time %>
  </div>

  <div class="field">
    <%= form.radio_button :feeling, 2, checked: true %>
    <%= form.label :feeling, "よかった", value: 2 %>

    <%= form.radio_button :feeling, 1 %>
    <%= form.label :feeling, "ふつう", value: 1 %>

    <%= form.radio_button :feeling, 0 %>
    <%= form.label :feeling, "わるかった", value: 0 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
